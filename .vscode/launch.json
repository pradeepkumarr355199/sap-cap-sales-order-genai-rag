{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run CAP (cds watch)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "cds",
        "watch",
        "--with-mocks",
        "--in-memory"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
